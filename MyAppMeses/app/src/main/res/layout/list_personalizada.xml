<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgLista"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:src="@drawable/ic_calendario"
        android:layout_margin="25sp"
        />

    <LinearLayout
        android:id="@+id/llContenedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imgLista"
        android:layout_margin="10sp">
    <TextView
        android:id="@+id/txtNumeroMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ECCF1B"
        />

    <TextView
        android:id="@+id/txtNombreMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enero"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E61FA4"
        />
        <TextView
            android:id="@+id/txtAnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#34A9C6"
            />
        </LinearLayout>

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="VER"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#A459ED"
        android:layout_margin="25sp"
        />

</RelativeLayout>