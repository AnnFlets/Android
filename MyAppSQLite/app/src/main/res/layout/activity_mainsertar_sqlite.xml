<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAInsertarSQLite"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Bebidas"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        />
    <EditText
        android:id="@+id/edtNombreBedidaInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre de la bebida"
        android:layout_margin="15sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/edtSaborBedidaInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el sabor de la bebida"
        android:layout_margin="15sp"
        android:inputType="text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edtPresentacionBedidaInsertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese la presentaciÃ³n de la bebida"
            android:layout_margin="15sp"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ml"
            android:textSize="20sp"
            android:layout_margin="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/edtTipoBedidaInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el tipo de la bebida"
        android:layout_margin="15sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/edtPrecioBedidaInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el precio de la bebida"
        android:layout_margin="15sp"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/btnInsertarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Bebida"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="15sp"
        android:backgroundTint="#00897B"
        />
</LinearLayout>