<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MACompra"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:src="@drawable/ic_gracias"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la pintura:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="5sp"
            android:textColor="#252525"
            />
        <TextView
            android:id="@+id/txtNombrePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:textColor="#252525"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS DEL COMPRADOR"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:textColor="#FFFFFF"
        android:background="#A3000000"
        android:fontFamily="sans-serif-black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="5sp"
            android:textColor="#252525"
            />
        <TextView
            android:id="@+id/txtNombreComprador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:textColor="#252525"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="5sp"
            android:textColor="#252525"
            />
        <TextView
            android:id="@+id/txtApellidoComprador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:textColor="#252525"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIT:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="5sp"
            android:textColor="#252525"
            />
        <TextView
            android:id="@+id/txtNitComprador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIT"
            android:textSize="18sp"
            android:textColor="#252525"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL A PAGAR CON IMPUESTO"
        android:textColor="#807F7F"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="30sp"
        />

    <TextView
        android:id="@+id/txtTotalCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2CBEC3"
        android:text="TOTAL"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="5sp"
        />
    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINALIZAR"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginRight="100sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="40sp"
        android:backgroundTint="#5487A3"
        android:textColor="@color/white"
        />

</LinearLayout>