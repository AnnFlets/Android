<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3A3A3A">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULAR IVA"
        android:gravity="center"
        android:layout_marginTop="65sp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="serif"
        />
    <EditText
        android:id="@+id/edtNombreP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="40sp"
        android:hint="Ingrese el nombre del producto"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textColorHint="#C6C6C6"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/edtValorP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNombreP"
        android:layout_marginTop="30sp"
        android:hint="Ingrese el valor del producto"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textColorHint="#C6C6C6"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/edtCantidadP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtValorP"
        android:layout_marginTop="30sp"
        android:hint="Ingrese la cantidad de productos"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textColorHint="#C6C6C6"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtCantidadP"
        android:text="..."
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:textColor="#F6FF84"
        />
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultado"
        android:layout_marginTop="50sp"
        android:text="CALCULAR"
        android:textColor="@color/white"
        android:layout_marginRight="70sp"
        android:layout_marginLeft="70sp"
        android:textSize="20sp"
        android:backgroundTint="#ED864E"
        android:onClick="onClick"
        />
</RelativeLayout>